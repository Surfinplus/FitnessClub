@model Fitnesclubplus.Models.Appointment

@{
    ViewData["Title"] = "Randevu Detayı";
}

<h1>Randevu Detayı</h1>

<div class="card mt-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Hizmet</dt>
            <dd class="col-sm-9 fw-bold">
                @if (Model.Service != null && Model.Service.ServiceCategory != null)
                {
                    @Model.Service.ServiceCategory.Name
                }
                else
                {
                    <span class="text-danger">Hizmet Bilgisi Yok</span>
                }
            </dd>

            <dt class="col-sm-3">Tarih</dt>
            <dd class="col-sm-9">@Model.AppointmentDate</dd>

            <dt class="col-sm-3">Durum</dt>
            <dd class="col-sm-9">@Model.Status</dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Düzenle</a>
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
    </div>
</div>
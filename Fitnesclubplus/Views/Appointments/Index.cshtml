@model IEnumerable<Fitnesclubplus.Models.Appointment>
@{
    ViewData["Title"] = "Randevular";
}

<h1>Randevular</h1>
<p><a asp-action="Create" class="btn btn-primary">Yeni Randevu</a></p>

<table class="table">
    <thead>
        <tr>
            <th>Tarih</th>
            <th>Hizmet</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AppointmentDate</td>

                <td>
                    @if (item.Service != null && item.Service.ServiceCategory != null)
                    {
                        @item.Service.ServiceCategory.Name
                    }
                </td>

                <td>@item.Status</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
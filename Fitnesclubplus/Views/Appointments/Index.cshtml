@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@model IEnumerable<Fitnesclubplus.Models.Appointment>
@{
    ViewData["Title"] = "Randevular";
    var isAdmin = User.IsInRole("Admin");
}

<h1>@(isAdmin ? "Randevu Yönetimi" : "Randevularım")</h1>

@if (!isAdmin)
{
    <p><a asp-action="Create" class="btn btn-primary">Yeni Randevu Al</a></p>
}

<table class="table table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Tarih / Saat</th>
            <th>Hizmet</th>
            <th>Eğitmen</th>
            @if (isAdmin)
            {
                <th>Müşteri</th>
            }
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.AppointmentDate.ToString("dd.MM.yyyy") <br />
                    <small class="text-muted">@item.AppointmentDate.ToString("HH:mm")</small>
                </td>

                <td>
                    @if (item.Service != null && item.Service.ServiceCategory != null)
                    {
                        @item.Service.ServiceCategory.Name
                    }
                </td>

                <td>
                    @(item.Trainer != null ? item.Trainer.FullName : "-")
                </td>

                @if (isAdmin)
                {
                    <td>@(item.User != null ? item.User.UserName : "Bilinmiyor")</td>
                }

                <td>
                    @if (item.Status == Fitnesclubplus.Models.AppointmentStatus.Pending)
                    {
                        <span class="badge bg-warning text-dark">Bekliyor</span>
                    }
                    else if (item.Status == Fitnesclubplus.Models.AppointmentStatus.Confirmed)
                    {
                        <span class="badge bg-success">Onaylandı</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">İptal/Red</span>
                    }
                </td>

                <td>
                    @if (isAdmin && item.Status == Fitnesclubplus.Models.AppointmentStatus.Pending)
                    {
                        <form asp-action="Approve" asp-route-id="@item.Id" style="display:inline;">
                            <button type="submit" class="btn btn-success btn-sm">Onayla</button>
                        </form>
                        <form asp-action="Reject" asp-route-id="@item.Id" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Reddet</button>
                        </form>
                    }

                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğine emin misin?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
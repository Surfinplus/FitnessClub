@model Fitnesclubplus.Models.Appointment

@{
    ViewData["Title"] = "Randevu Sil";
}

<h1>Randevuyu Sil</h1>
<h3 class="text-danger">Emin misiniz?</h3>

<div class="card border-danger">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Hizmet</dt>
            <dd class="col-sm-9">
                @if (Model.Service != null && Model.Service.ServiceCategory != null)
                {
                    @Model.Service.ServiceCategory.Name
                }
            </dd>

            <dt class="col-sm-3">Tarih</dt>
            <dd class="col-sm-9">@Model.AppointmentDate</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Evet, Sil" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
        </form>
    </div>
</div>
@model Fitnesclubplus.Models.Gym

@{
    ViewData["Title"] = "Düzenle";
}

<h1>Düzenle</h1>

<h4>Spor Salonu</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageName" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="OpeningHours" class="control-label"></label>
                <input asp-for="OpeningHours" class="form-control" />
                <span asp-validation-for="OpeningHours" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 p-3 border rounded bg-light">
                <label class="control-label fw-bold">Mevcut Resim</label>
                <div class="mb-2">
                    @if (!string.IsNullOrEmpty(Model.ImageName))
                    {
                        <img src="~/images/@Model.ImageName" width="150" class="img-thumbnail" />
                    }
                    else
                    {
                        <span class="text-muted">Resim Yok</span>
                    }
                </div>

                <label asp-for="ImageUpload" class="control-label">Resmi Deðiþtir (Ýsteðe Baðlý)</label>
                <input asp-for="ImageUpload" type="file" class="form-control" accept="image/*" />
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
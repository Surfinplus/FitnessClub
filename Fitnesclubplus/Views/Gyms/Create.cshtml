                <label class="control-label">Çalýþma Saatleri</label>
                <div class="input-group">
                    <span class="input-group-text">Açýlýþ</span>
                    <input type="time" name="acilisSaati" class="form-control" required />

                    <span class="input-group-text">Kapanýþ</span>
                    <input type="time" name="kapanisSaati" class="form-control" required />
                </div>
            </div>


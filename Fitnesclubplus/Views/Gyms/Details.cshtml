@model Fitnesclubplus.Models.Gym

@{
    ViewData["Title"] = "Salon Detaylarý";
}

<div class="container mt-4">
    <div class="row align-items-start">

        <div class="col-md-7">
            <h1 class="display-6">@Model.Name</h1>
            <hr />

            <dl class="row fs-5">
                <dt class="col-sm-4 text-muted">
                    @Html.DisplayNameFor(model => model.Address)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Address)
                </dd>

                <dt class="col-sm-4 text-muted">
                    @Html.DisplayNameFor(model => model.OpeningHours)
                </dt>
                <dd class="col-sm-8">
                    <span class="badge bg-success">@Html.DisplayFor(model => model.OpeningHours)</span>
                </dd>

                <dt class="col-sm-4 text-muted">Açýklama</dt>
                <dd class="col-sm-8">
                    <span class="text-muted fst-italic">Detaylý açýklama bulunmuyor.</span>
                </dd>
            </dl>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning btn-lg px-4">
                    <i class="fa fa-edit"></i> Düzenle
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                    Listeye Dön
                </a>
            </div>
        </div>

        <div class="col-md-5">
            @if (!string.IsNullOrEmpty(Model.ImageName))
            {
                <div class="card shadow-lg border-0">
                    <img src="~/images/@Model.ImageName"
                         class="card-img-top img-fluid rounded"
                         alt="@Model.Name"
                         style="object-fit: cover; max-height: 500px;" />
                </div>
            }
            else
            {
                <div class="alert alert-secondary text-center py-5 shadow-sm">
                    <p class="mb-0">Bu salon için resim yüklenmemiþ.</p>
                </div>
            }
        </div>

    </div>
</div>
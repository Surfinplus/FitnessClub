@model Fitnesclubplus.Models.Gym
@{
    ViewData["Title"] = "Salon Detayı";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6 fw-bold text-dark">@Model.Name</h1>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">← Listeye Dön</a>
    </div>

    <div class="row">
        <div class="col-lg-6">

            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="fw-bold text-primary"><i class="bi bi-info-circle"></i> Hakkında</h5>
                    <p class="text-muted mb-2">
                        @Model.Address
                    </p>
                    <p class="mb-0">
                        <strong><i class="bi bi-clock"></i> Çalışma Saatleri:</strong> <br>
                        @(Model.OpeningHours ?? "Her gün 09:00 - 23:00")
                    </p>
                </div>
            </div>

            <div class="mb-4">
                <h5 class="fw-bold border-bottom pb-2 text-dark">🏋️ Eğitmen Kadrosu ve Program</h5>
                @if (Model.Trainers != null && Model.Trainers.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var trainer in Model.Trainers)
                        {
                            // 1. Kontrol: Hoca "Her Gün" çalışıyor mu?
                            var generalAvailability = trainer.TrainerAvailabilities.FirstOrDefault(a => a.IsGeneral);

                            <div class="list-group-item px-0 py-3 border-bottom">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-3" style="width:45px; height:45px;">
                                            <i class="bi bi-person-fill text-primary fs-4"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0 fw-bold text-dark">@trainer.FullName</h6>
                                            <small class="text-muted fw-bold">@trainer.Specialization</small>
                                        </div>
                                    </div>

                                    @if (generalAvailability == null)
                                    {
                                        <button class="btn btn-sm btn-outline-info rounded-pill" onclick="loadSchedule(@trainer.Id, '@trainer.FullName')">
                                            <i class="bi bi-calendar-week"></i> Takvimi Gör
                                        </button>
                                    }
                                </div>

                                @if (generalAvailability != null)
                                {
                                    <div class="mt-2 ms-5 ps-2 border-start border-3 border-success">
                                        <small class="d-block text-dark">
                                            <i class="bi bi-check-circle-fill text-success"></i>
                                            Her Gün: <strong>@generalAvailability.StartTime.ToString(@"hh\:mm") - @generalAvailability.EndTime.ToString(@"hh\:mm")</strong>
                                        </small>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-light border">Henüz eğitmen atanmamış.</div>
                }
            </div>

            <div class="mb-4">
                <h5 class="fw-bold border-bottom pb-2">📦 Hizmet Paketleri</h5>
                @if (Model.Services != null && Model.Services.Any())
                {
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var service in Model.Services)
                        {
                            <span class="badge bg-light text-dark border p-2">
                                @(service.ServiceCategory?.Name ?? "Hizmet")
                                <span class="text-primary ms-1">@service.Price ₺</span>
                            </span>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-light border">Paket bulunamadı.</div>
                }
            </div>

            <div class="d-grid mt-4">
                <a asp-controller="Appointments" asp-action="Create" class="btn btn-primary btn-lg shadow">Hemen Randevu Al</a>
            </div>
        </div>

        <div class="col-lg-6 d-none d-lg-block">
            <div class="sticky-top" style="top: 20px;">
                @if (!string.IsNullOrEmpty(Model.ImageName))
                {
                    <img src="~/images/@Model.ImageName" class="img-fluid rounded-4 shadow" alt="@Model.Name" style="object-fit: cover; width:100%; height: 600px;">
                }
                else
                {
                    <img src="https://images.unsplash.com/photo-1571902943202-507ec2618e8f?q=80&w=1375&auto=format&fit=crop"
                         class="img-fluid rounded-4 shadow" alt="Varsayılan" style="object-fit: cover; width:100%; height: 600px;">
                }
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="scheduleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalTrainerName">Eğitmen Programı</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                <div id="loadingSpinner" class="text-center py-3">
                    <div class="spinner-border text-primary" role="status"></div>
                    <p class="mt-2">Yükleniyor...</p>
                </div>
                <ul class="list-group" id="scheduleList"></ul>
                <div id="noDataMessage" class="alert alert-warning d-none">Kayıtlı program bulunamadı.</div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                <a asp-controller="Appointments" asp-action="Create" class="btn btn-success">Randevu Al</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function loadSchedule(trainerId, trainerName) {
            $('#modalTrainerName').text(trainerName + " - Çalışma Takvimi");
            $('#scheduleList').empty();
            $('#loadingSpinner').show();
            $('#noDataMessage').addClass('d-none');

            var modal = new bootstrap.Modal(document.getElementById('scheduleModal'));
            modal.show();

            // API ÇAĞRISI (AJAX)
            $.ajax({
                url: '/api/TrainerApi/GetSchedule/' + trainerId,
                type: 'GET',
                success: function (data) {
                    $('#loadingSpinner').hide();
                    if (data.length === 0) {
                        $('#noDataMessage').removeClass('d-none');
                        return;
                    }
                    $.each(data, function (index, item) {
                        var badge = item.isGeneral
                            ? '<span class="badge bg-success me-2">HER GÜN</span>'
                            : '<span class="badge bg-info text-dark me-2">' + item.dateText + ' (' + item.dayName + ')</span>';

                        var html = '<li class="list-group-item d-flex justify-content-between align-items-center">' +
                                   '<div>' + badge + '</div>' +
                                   '<span class="fw-bold">' + item.start + ' - ' + item.end + '</span>' +
                                   '</li>';
                        $('#scheduleList').append(html);
                    });
                },
                error: function () {
                    $('#loadingSpinner').hide();
                    alert("Hata oluştu.");
                }
            });
        }
    </script>
}
@model Fitnesclubplus.Models.Service

@{
    ViewData["Title"] = "Sil";
}

<h1>Hizmeti Sil</h1>
<h3 class="text-danger">Bu hizmeti silmek istediğinize emin misiniz?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Hizmet</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.ServiceCategory.Name)</dd>

        <dt class="col-sm-3">Salon</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Gym.Name)</dd>

        <dt class="col-sm-3">Ücret</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Price) ₺</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Evet, Sil" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
    </form>
</div>
@model Fitnesclubplus.Models.Service

@{
    ViewData["Title"] = "Hizmet Ekle";
}

<h1>Yeni Hizmet Tanımla</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="GymId" class="control-label">Spor Salonu</label>
                <select asp-for="GymId" class="form-control" asp-items="ViewBag.GymId">
                    <option value="">-- Salon Seçiniz --</option>
                </select>
                <span asp-validation-for="GymId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ServiceCategoryId" class="control-label">Hizmet Kategorisi</label>
                <select asp-for="ServiceCategoryId" class="form-control" asp-items="ViewBag.ServiceCategoryId">
                    <option value="">-- Kategori Seçiniz --</option>
                </select>
                <span asp-validation-for="ServiceCategoryId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TrainerId" class="control-label">Eğitmen</label>
                <select asp-for="TrainerId" class="form-control" disabled>
                    <option value="">-- Önce Salon Seçiniz --</option>
                </select>
                <span asp-validation-for="TrainerId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DurationMinutes" class="control-label"></label>
                <input asp-for="DurationMinutes" class="form-control" />
                <span asp-validation-for="DurationMinutes" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Hizmeti Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            // Elementleri seçelim
            var gymSelect = $('#GymId');
            var trainerSelect = $('#TrainerId');

            // Salon değiştiğinde çalışacak fonksiyon
            gymSelect.change(function () {
                var selectedGymId = $(this).val();

                // Eğer geçerli bir salon seçildiyse
                if (selectedGymId) {
                    $.ajax({
                        url: '/Services/GetTrainersByGym', // Controller'daki yeni metoda git
                        type: 'GET',
                        data: { gymId: selectedGymId },
                        success: function (data) {
                            // Gelen veriyi Trainer kutusuna doldur
                            trainerSelect.empty(); // Önce temizle

                            if (data.length === 0) {
                                trainerSelect.append('<option value="">-- Bu salonda eğitmen yok --</option>');
                            } else {
                                trainerSelect.append('<option value="">-- Eğitmen Seçiniz --</option>');
                                $.each(data, function (i, trainer) {
                                    trainerSelect.append($('<option></option>').val(trainer.id).html(trainer.fullName));
                                });
                            }

                            trainerSelect.prop('disabled', false); // Kutuyu aktif et
                        },
                        error: function () {
                            alert('Eğitmenler getirilirken bir hata oluştu.');
                        }
                    });
                } else {
                    // Salon seçimi kaldırıldıysa Trainer'ı sıfırla ve kilitle
                    trainerSelect.empty();
                    trainerSelect.append('<option value="">-- Önce Salon Seçiniz --</option>');
                    trainerSelect.prop('disabled', true);
                }
            });
        });
    </script>
}
@model Fitnesclubplus.Models.ServiceCategory
@{
    ViewData["Title"] = "Kategori Sil";
}

<h1>Kategoriyi Sil</h1>
<h3 class="text-danger">Bu kategoriyi silmek istediğine emin misin?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Kategori Adı</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Evet, Sil" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
    </form>
</div>
@model Fitnesclubplus.Models.TrainerAvailability

@{
    ViewData["Title"] = "Saat Ekle";
}

<h1>Çalışma Saati Ekle</h1>
<h3>Eğitmen: <span class="text-primary">@ViewBag.TrainerName</span></h3>
<hr />

<div class="row">
    <div class="col-md-5">
        <form asp-action="Create">
            <input type="hidden" asp-for="TrainerId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-check mb-3 bg-light p-3 border rounded">
                <input class="form-check-input" asp-for="IsGeneral" id="IsGeneralCheck" />
                <label class="form-check-label fw-bold" asp-for="IsGeneral">
                    Bu saatler Her Gün geçerli olsun
                </label>
                <small class="form-text text-muted d-block">
                    (Bunu seçerseniz tarih seçmenize gerek kalmaz, hoca her gün bu saatlerde müsait sayılır.)
                </small>
            </div>

            <div class="form-group mb-3" id="DateGroup">
                <label asp-for="Date" class="control-label">Tarih</label>
                <input asp-for="Date" type="date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-6">
                    <div class="form-group mb-3">
                        <label asp-for="StartTime" class="control-label">Başlangıç</label>
                        <input asp-for="StartTime" type="time" class="form-control" />
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group mb-3">
                        <label asp-for="EndTime" class="control-label">Bitiş</label>
                        <input asp-for="EndTime" type="time" class="form-control" />
                        <span asp-validation-for="EndTime" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-success w-100" />
                <a asp-action="Index" asp-route-trainerId="@Model.TrainerId" class="btn btn-secondary w-100 mt-2">Listeye Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Checkbox'a tıklandığında Tarih kutusunu aç/kapat
        $(document).ready(function() {
            function toggleDate() {
                if ($('#IsGeneralCheck').is(':checked')) {
                    $('#DateGroup').slideUp(); // Gizle
                } else {
                    $('#DateGroup').slideDown(); // Göster
                }
            }

            // Sayfa açıldığında kontrol et
            toggleDate();

            // Değiştiğinde kontrol et
            $('#IsGeneralCheck').change(toggleDate);
        });
    </script>
}
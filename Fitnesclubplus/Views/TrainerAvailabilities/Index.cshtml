@model IEnumerable<Fitnesclubplus.Models.TrainerAvailability>

@{
    ViewData["Title"] = "Çalışma Saatleri";
    // Gün isimlerini Türkçeleştirmek için basit bir helper
    string GunAdi(DayOfWeek day)
    {
        switch (day)
        {
            case DayOfWeek.Monday: return "Pazartesi";
            case DayOfWeek.Tuesday: return "Salı";
            case DayOfWeek.Wednesday: return "Çarşamba";
            case DayOfWeek.Thursday: return "Perşembe";
            case DayOfWeek.Friday: return "Cuma";
            case DayOfWeek.Saturday: return "Cumartesi";
            case DayOfWeek.Sunday: return "Pazar";
            default: return day.ToString();
        }
    }
}

<h1>Çalışma Saatleri: <span class="text-primary">@ViewBag.TrainerName</span></h1>

<p>
    <a asp-action="Create" asp-route-trainerId="@ViewBag.TrainerId" class="btn btn-primary">Yeni Saat Ekle</a>
    <a asp-controller="Trainers" asp-action="Index" class="btn btn-secondary">Personel Listesine Dön</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Gün</th>
            <th>Başlangıç</th>
            <th>Bitiş</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center text-muted">Henüz çalışma saati eklenmemiş.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">@GunAdi(item.DayOfWeek)</td>
                    <td>@item.StartTime.ToString(@"hh\:mm")</td>
                    <td>@item.EndTime.ToString(@"hh\:mm")</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğine emin misin?');">Sil</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
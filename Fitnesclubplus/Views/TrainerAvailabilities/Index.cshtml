@model IEnumerable<Fitnesclubplus.Models.TrainerAvailability>

@{
    ViewData["Title"] = "Çalışma Takvimi";
}

<h1>Çalışma Takvimi: <span class="text-primary">@ViewBag.TrainerName</span></h1>

<p>
    <a asp-action="Create" asp-route-trainerId="@ViewBag.TrainerId" class="btn btn-primary">Yeni Ekle</a>
    <a asp-controller="Trainers" asp-action="Index" class="btn btn-secondary">Personel Listesine Dön</a>
</p>

<table class="table table-bordered table-striped align-middle">
    <thead class="table-dark">
        <tr>
            <th>Durum / Tarih</th>
            <th>Gün</th>
            <th>Saat Aralığı</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center text-muted p-4">Kayıt bulunamadı.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                // Eğer "Her Gün" ise satırı yeşilimsi yapalım
                <tr class="@(item.IsGeneral ? "table-success" : "")">

                    <td class="fw-bold">
                        @if (item.IsGeneral)
                        {
                            <span class="badge bg-success">HER GÜN GEÇERLİ</span>
                        }
                        else
                        {
                            @item.Date?.ToString("dd.MM.yyyy")
                        }
                    </td>

                    <td>
                        @if (item.IsGeneral)
                        {
                            <span>Tüm Günler</span>
                        }
                        else
                        {
                            var culture = new System.Globalization.CultureInfo("tr-TR");
                            @item.Date?.ToString("dddd", culture)
                        }
                    </td>

                    <td>
                        @item.StartTime.ToString(@"hh\:mm") - @item.EndTime.ToString(@"hh\:mm")
                    </td>

                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğine emin misiniz?');">Sil</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
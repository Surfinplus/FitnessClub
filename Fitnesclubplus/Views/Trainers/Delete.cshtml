@model Fitnesclubplus.Models.Trainer
@{
    ViewData["Title"] = "Personel Sil";
}

<h1>Personeli Sil</h1>
<h3 class="text-danger">Bu personeli silmek istediğinize emin misiniz?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Resim</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageName))
            {
                <img src="~/images/@Model.ImageName" width="100" class="rounded" />
            }
        </dd>

        <dt class="col-sm-2">Ad Soyad</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FullName)</dd>

        <dt class="col-sm-2">Uzmanlık</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Specialization)</dd>

        <dt class="col-sm-2">Salon</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Gym.Name)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Evet, Sil" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
    </form>
</div>
@model Fitnesclubplus.Models.Trainer

@{
    ViewData["Title"] = "Personel Ekle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-person-plus-fill"></i> Yeni Personel Ekle</h4>
                </div>
                <div class="card-body p-4">

                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-group mb-3">
                            <label asp-for="GymId" class="form-label fw-bold">Çalıştığı Salon</label>
                            <select asp-for="GymId" class="form-select" asp-items="ViewBag.GymId">
                                <option value="">-- Lütfen Salon Seçiniz --</option>
                            </select>
                            <span asp-validation-for="GymId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="FullName" class="form-label fw-bold"></label>
                            <input asp-for="FullName" class="form-control" placeholder="Ad Soyad giriniz..." />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Specialization" class="form-label fw-bold"></label>
                            <input asp-for="Specialization" class="form-control" placeholder="Örn: Kardiyo, Pilates, Yüzme..." />
                            <span asp-validation-for="Specialization" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="ImageUpload" class="form-label fw-bold">Personel Fotoğrafı</label>
                            <input asp-for="ImageUpload" class="form-control" type="file" accept="image/*" />
                            <small class="text-muted">Jpg, Jpeg veya Png formatında yükleyiniz.</small>
                            <span asp-validation-for="ImageUpload" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">İptal / Listeye Dön</a>
                            <input type="submit" value="Personeli Kaydet" class="btn btn-success px-5" />
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
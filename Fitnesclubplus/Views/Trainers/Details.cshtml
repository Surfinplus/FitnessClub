@model Fitnesclubplus.Models.Trainer
@{
    ViewData["Title"] = "Personel Detayı";
}

<h1>Personel Detayı</h1>
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-3 text-center">
                @if (!string.IsNullOrEmpty(Model.ImageName))
                {
                    <img src="~/images/@Model.ImageName" class="img-fluid rounded" style="max-height:200px;" />
                }
                else
                {
                    <div class="alert alert-secondary">Resim Yok</div>
                }
            </div>
            <div class="col-md-9">
                <h3>@Model.FullName</h3>
                <p class="text-muted">@Model.Specialization</p>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">Çalıştığı Salon</dt>
                    <dd class="col-sm-9">@Model.Gym.Name</dd>

                    <dt class="col-sm-3">Verdiği Hizmetler</dt>
                    <dd class="col-sm-9">
                        @if (Model.Services != null && Model.Services.Any())
                        {
                            <ul>
                                @foreach (var serv in Model.Services)
                                {
                                    <li>@serv.ServiceCategory.Name (@serv.Price ₺)</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-warning">Henüz atanmış bir hizmet paketi yok.</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Düzenle</a>
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
    </div>
</div>